<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="share.fair.miflas.DayInfoActivity"
    android:id="@+id/rel_lay">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People on duty:"
        android:id="@+id/tv_day_title"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_day_title"
        android:id="@+id/tableLayout"
        android:layout_above="@+id/switch_request_replacement">
        <TableRow android:id="@+id/tr1">
            <Button
            android:layout_width="@dimen/day_width"
            android:layout_height="wrap_content"
            android:text="c"
                android:textSize="@dimen/small_text_size"
            android:id="@+id/bt_duty1"
                android:layout_weight="0.1"
                />
            <TextView
                android:layout_width="@dimen/day_width"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:layout_weight="0.3"
                android:id="@+id/tv_duty1" />
            <Button
                android:layout_width="@dimen/day_width"

                android:layout_height="wrap_content"
            android:text="replace"
                android:layout_weight="0.3"
                android:textSize="@dimen/small_text_size"
            android:id="@+id/bt_replace1"
                />


            <TextView
                android:layout_width="@dimen/day_width"

                android:layout_height="wrap_content"
                android:text="replacement"
                android:layout_weight="0.3"
                android:id="@+id/tv_replacement1" />


        </TableRow>
        <TableRow>
            <Button
            android:layout_width="@dimen/day_width"
            android:layout_height="wrap_content"
            android:text="c"
                android:layout_weight="0.1"
                android:textSize="@dimen/small_text_size"
            android:id="@+id/bt_duty2" />
            <TextView
                android:layout_width="@dimen/day_width"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Large Text"
                android:id="@+id/tv_duty2"
                android:layout_below="@+id/tv_duty1"
                android:layout_alignLeft="@+id/tv_duty1"
                android:layout_alignStart="@+id/tv_duty1" />

            <Button
                android:layout_width="@dimen/day_width"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="replace"
                android:textSize="@dimen/small_text_size"
                android:id="@+id/bt_replace2"
             />

            <TextView
                android:layout_width="@dimen/day_width"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="replacement"
                android:id="@+id/tv_replacement2" />

        </TableRow>
        <TableRow>
            <Button
                android:layout_width="@dimen/day_width"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="c"
                android:textSize="@dimen/small_text_size"
                android:id="@+id/bt_duty3"
                />

            <TextView
                android:layout_width="@dimen/day_width"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:layout_weight="0.3"
                android:id="@+id/tv_duty3"
            />
            <Button
                android:layout_width="@dimen/day_width"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="replace"
                android:textSize="@dimen/small_text_size"
                android:id="@+id/bt_replace3"
             />

            <TextView
                android:layout_width="@dimen/day_width"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="replacement"
                android:id="@+id/tv_replacement3"
             />


        </TableRow>
        <TableRow>
            <Button
                android:layout_width="@dimen/day_width"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="c"
                android:textSize="@dimen/small_text_size"
                android:id="@+id/bt_duty4"
                />

            <TextView
                android:layout_width="@dimen/day_width"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Large Text"
                android:id="@+id/tv_duty4"
                />
            <Button
                android:layout_width="@dimen/day_width"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="replace"
                android:textSize="@dimen/small_text_size"
                android:id="@+id/bt_replace4"
                />

            <TextView
                android:layout_width="@dimen/day_width"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="replacement"
                android:id="@+id/tv_replacement4"
                />


        </TableRow>
        <TableRow>
            <Button
                android:layout_width="@dimen/day_width"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="c"
                android:textSize="@dimen/small_text_size"
                android:id="@+id/bt_duty5"
                />

            <TextView
                android:layout_width="@dimen/day_width"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Large Text"
                android:id="@+id/tv_duty5"
                />
            <Button
                android:layout_width="@dimen/day_width"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="replace"
                android:textSize="@dimen/small_text_size"
                android:id="@+id/bt_replace5"
                />

            <TextView
                android:layout_width="@dimen/day_width"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="replacement"
                android:id="@+id/tv_replacement5"
                />


        </TableRow>



    </TableLayout>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="@string/ask_replacment"
        android:textSize="20dp"
        android:id="@+id/switch_request_replacement"
        android:layout_alignParentBottom="true"
        android:checked="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
